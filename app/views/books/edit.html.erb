<main>
  <p id="notice"></p>
  <%= form_with model: @book, local:true do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_field :body %>
        </div>
        <div class="form-group">
          <div class="d-grid gap-2">
            <button class="btn btn-secondary" type="submit"><%= link_to "Update Book",users_path(@user) %></button>
          </div>
        </div>

      </div>
    </div>
  </div>
  <% end %>

<%= link_to "show",book_path(@book) %>
" | "
<%= link_to "back",books_path %>
</main>