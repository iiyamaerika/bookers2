
<main>
<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/userinfo', user:current_user %>
        <%= render 'users/newbook', book:@book_new %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
             <tbody>
                 <tr>
                   <td><%= attachment_image_tag @book.user, :profile_image, :fill, 10, 10, format:'jpg', fallback: "no_image.jpg",size:'100x100' %></td>
                   <td><%= @book.title %></td>
                   <td><%= @book.body %></td>

                   <td>
                       <div class="d-grid gap-2">
                         <% if @user == current_user %>
                         <%= link_to "Edit",edit_book_path(@book), class: "btn btn-sm btn-success" %>
                         <% end %>
                       </div>
                   </td>
                   <td>
                       <div class="d-grid gap-2">
                          <% if @user == current_user %>
                         <%= link_to "Destroy",book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
                         <% end %>
                       </div>
                   </td>

                 </tr>
             </tbody>
        </table>
      </div>
   </div>
</div>

</main>